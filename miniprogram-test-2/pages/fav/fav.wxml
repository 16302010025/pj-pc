<!--pages/fav/fav.wxml-->
<view class="cu-timeline">
  <view class="cu-time">收藏</view>
  <view class="cu-item text-red cuIcon-favorfill">
    <view class="content bg-grey shadow-blur">
      <view class='flex p-xs'>
        <view class='flex-treble'>
        <navigator class='nav-en' url='../kpoint/kpdetail/kpdetail?kpid={{kpid}}&&kpname={{kpname}}' hover-class="none">
          <text>{{course}}-{{chapter}}\n</text>
          <text class='text-cut desc'>{{kpname}}</text>
          </navigator>
        </view>
        <view class='flex-sub '>
          <button class='cu-btn round bg-orange btn-del' bindtap='delfav'>删除</button>
        </view>
      </view>
    </view>
  </view>
</view>